<%-include("header")-%>
    <div class="box" id="heading">
        <h1><%= listTitle %></h1>
        
    </div>
    <div class="box">

        <form action="/delete" method="post" id="delForm">

            <% newListItems.forEach(function(listItem){ %>
                <div class="item">
                    <input type="checkbox" onchange="submitForm()" value="<%= listItem._id%>" name="checkbox">
                    <p><%= listItem.name %></p> 
                </div>
                <%  });  %>
            </form>
                
            <script>
                function submitForm() { 
                  document.getElementById("delForm").submit(); 
               }               

            </script>
                
            
            
            <form class="item"  action="/" method="post">
                <input type="text" name="newItem" placeholder="Write your task here" autocomplete="off">
                <button type="submit" name="list" value= <%= listTitle %>> +

                </button>
            </form>
    </div>
    <%-include("footer")-%>